@model EgeBlogSite.UI.Models.ViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="/Articles/Edit" method="post">
    <div class="jumbotron bg-warning">
        <h1>Makale Düzenle </h1>
        <div class="form-row" style="margin-top:25px; margin-bottom:25px; ">
            @Html.HiddenFor(z=>z.Article.Id)
            <div class="form-group col-lg-6">
                <label>Makale Başlığı </label>
                @Html.TextBoxFor(z => z.Article.Title, null, new { @class = "form-control" })
            </div>
            <div class="form-group col-lg-6">
                <label>Kategori Seçin</label>
                @Html.DropDownListFor(z => z.Article.CategoryId,
               new SelectList(Model.Categories, "Id", "Name"),
               "Seçiniz", new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group ">
            <label>Metni girin</label>
            @Html.TextAreaFor(z => z.Article.Text, new { @class = "form-control", @id = "textarea", })
        </div>
       
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>

