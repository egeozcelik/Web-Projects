@model IEnumerable<CategoryDTO>

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pageHeader{
    <div class="note note-info">
        <p> Sisteme kayıtlı kategoriler </p>
    </div>
}

<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>Sisteme kayıtlı kategoriler
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>
            <a href="#portlet-config" data-toggle="modal" class="config"> </a>
            <a href="javascript:;" class="reload"> </a>
            <a href="javascript:;" class="remove"> </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> CategoryName</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CategoryDTO category in Model)
                    {
                        <tr>
                            <td>@category.Id </td>
                            <td>@category.Name</td>
                            <td>
                                <a class="btn btn-success btn-sm" asp-action="CategoryEdit" asp-route-id="@category.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="CategoryDelete" asp-route-id="@category.Id">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
